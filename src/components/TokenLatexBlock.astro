---
import { renderToString } from "katex";
import type { LatexBlockToken } from "../core/latexExtensions";
import type { TokenRendererProps } from "./TokenRenderer.astro";

type Props = TokenRendererProps<LatexBlockToken>;

const { token } = Astro.props;
const html = renderToString(token.formula, { displayMode: true });
---

<Fragment set:html={html} />
