---
import type { Tokens } from "marked";
import OrderedList from "./OrderedList.astro";
import type { TokenRendererProps } from "./TokenRenderer.astro";
import TokenRenderer from "./TokenRenderer.astro";
import UnorderedList from "./UnorderedList.astro";

type Props = TokenRendererProps<Tokens.List>;

const { token, context } = Astro.props;
const List = token.ordered ? OrderedList : UnorderedList;
---

<List>
  {
    (token.items as Tokens.ListItem[]).map((token) => (
      <TokenRenderer {context} {token} />
    ))
  }
</List>
