---
import type { Token } from "marked";
import type { Context } from "../core/lexer";
import TokenRenderer from "./TokenRenderer.astro";

interface Props {
  context: Context;
  tokens?: Token[];
}

const { context, tokens } = Astro.props;
---

<style is:global>
  section[horizontal] > span {
    display: flex;
    gap: var(--space-5);
  }

  colored[blue] {
    color: var(--blue-9);
  }
</style>

{tokens && tokens.map((token) => <TokenRenderer {token} {context} />)}
