---
import type { Token } from "marked";
import type { FrontMatter } from "../core/globContents";
import TokenRenderer, { type FileContext } from "./TokenRenderer.astro";

interface Props {
  tokens?: Token[];
  frontMatter: FrontMatter;
  fileContext: FileContext;
}

const { tokens, frontMatter, fileContext } = Astro.props;
---

<style is:global>
  section[horizontal] > span {
    display: flex;
  }

  colored[blue] {
    color: var(--blue-9);
  }
</style>

{
  tokens &&
    tokens.map((token) => <TokenRenderer {token} {frontMatter} {fileContext} />)
}
