---
import type { Token } from "marked";
import TokenRenderer from "./TokenRenderer.astro";

interface Props {
  tokens?: Token[];
}

const { tokens } = Astro.props;
---

<style is:global>
  section[data-horizontal] span {
    display: flex;
  }

  colored[blue] {
    color: var(--blue-9);
  }
</style>

{tokens && tokens.map((token) => <TokenRenderer {token} />)}
