---
import { Box, Flex } from "@radix-ui/themes";
import { times } from "lodash-es";

const tildas = 3;
---

<style is:global>
  .consistent-separator {
    height: 1pt;
  }

  .consistent-separator:not(.tilda) {
    background: linear-gradient(90deg, var(--gray-6), var(--gray-3));
    flex: 1;
  }

  .consistent-separator.tilda {
    background-color: var(--gray-3);
    width: var(--space-3);
  }
</style>

<Flex gap="2">
  <Box className="consistent-separator" />
  {times(tildas, () => <Box className="consistent-separator tilda" />)}
</Flex>
